{
  "family": "expense-tracker-api",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::123456789012:role/expense-tracker-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::123456789012:role/expense-tracker-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "expense-tracker-api",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/expense-tracker-api:latest",
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/expense-tracker-api",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "PORT",
          "value": "8080"
        }
      ],
      "secrets": [
        {
          "name": "DB_HOST",
          "valueFrom": "/expense-tracker/db/host"
        },
        {
          "name": "DB_USER",
          "valueFrom": "/expense-tracker/db/user"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "/expense-tracker/db/password"
        },
        {
          "name": "DB_DATABASE",
          "valueFrom": "/expense-tracker/db/database"
        },
        {
          "name": "DB_PORT",
          "valueFrom": "/expense-tracker/db/port"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8080/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}